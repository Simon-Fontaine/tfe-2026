{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path aliases for monorepo
    "baseUrl": ".",
    "paths": {
      "@workspaces/shared": ["packages/shared/src/index.ts"],
      "@workspaces/database": ["packages/database/src/index.ts"],
      "@workspaces/database/schema": ["packages/database/src/db/schema.ts"],
      "@workspaces/api": ["apps/api/src/index.ts"],
      "@workspaces/web": ["apps/web/src/index.ts"]
    }
  }
}

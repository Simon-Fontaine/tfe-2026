{
  "name": "@workspaces/api",
  "version": "0.1.0",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cd ../../ && bun --watch apps/api/src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run dist/index.js",
    "check": "biome check .",
    "fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@workspaces/database": "workspace:*",
    "@workspaces/shared": "workspace:*",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.11.1",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
